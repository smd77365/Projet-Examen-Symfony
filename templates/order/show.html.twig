{% extends 'base.html.twig' %}

{% block title %}Commande #{{ order.id }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-receipt"></i> Commande #{{ order.id }}
                </h1>
                <a href="{{ path('app_order_index') }}" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Retour aux commandes
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-bag"></i> Détails de la commande
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Prix unitaire</th>
                                    <th>Quantité</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for orderItem in order.orderItems %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if orderItem.produit.image %}
                                                    <img src="{{ asset('uploads/produits/' ~ orderItem.produit.image) }}" 
                                                         class="me-3" style="width: 50px; height: 50px; object-fit: cover;" 
                                                         alt="{{ orderItem.produit.nom }}">
                                                {% else %}
                                                    <div class="bg-light me-3 d-flex align-items-center justify-content-center" 
                                                         style="width: 50px; height: 50px;">
                                                        <i class="bi bi-image text-muted"></i>
                                                    </div>
                                                {% endif %}
                                                <div>
                                                    <h6 class="mb-0">{{ orderItem.produit.nom }}</h6>
                                                    <small class="text-muted">{{ orderItem.produit.categorie.nom }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ orderItem.prixUnitaire|number_format(2, ',', ' ') }} FCFA</td>
                                        <td>{{ orderItem.quantite }}</td>
                                        <td class="text-end fw-bold">{{ orderItem.total|number_format(2, ',', ' ') }} FCFA</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Informations
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Numéro de commande:</strong><br>
                        <span class="text-muted">#{{ order.id }}</span>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Date de commande:</strong><br>
                        <span class="text-muted">{{ order.date|date('d/m/Y à H:i') }}</span>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Statut:</strong><br>
                        <span class="badge bg-{{ order.status == 'confirmed' ? 'success' : 'warning' }}">
                            {{ order.status == 'confirmed' ? 'Confirmée' : 'En attente' }}
                        </span>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Client:</strong><br>
                        <span class="text-muted">{{ order.user.email }}</span>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between">
                        <span class="h5">Total:</span>
                        <span class="h5 text-primary">{{ order.total|number_format(2, ',', ' ') }} FCFA</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 