{% extends 'base.html.twig' %}

{% block title %}Accueil - Gestion Produits{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="bi bi-house-door"></i> 
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                Tableau de bord
            {% else %}
                Bienvenue sur notre boutique
            {% endif %}
        </h1>
    </div>
</div>

{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="alert alert-info text-center mb-4">
        <h4><i class="bi bi-info-circle"></i> Découvrez notre catalogue !</h4>
        <p class="mb-3">Connectez-vous ou créez un compte pour profiter de toutes les fonctionnalités : panier, commandes, et bien plus encore.</p>
        <div class="d-flex justify-content-center gap-2">
            <a href="{{ path('app_login') }}" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right"></i> Connexion
            </a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-primary">
                <i class="bi bi-person-plus"></i> Inscription
            </a>
        </div>
    </div>
{% endif %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Produits</h5>
                                <h2 class="mb-0">{{ produits|length }}</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-box fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Catégories</h5>
                                <h2 class="mb-0">{{ categories|length }}</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-tags fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Stock Faible</h5>
                                <h2 class="mb-0">{{ produitsLowStock|length }}</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-exclamation-triangle fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info mb-4">
            Bienvenue {{ app.user.email }} ! Retrouvez ici vos produits favoris, votre panier et vos commandes.
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <a href="{{ path('app_cart_index') }}" class="btn btn-primary w-100 mb-3">
                    <i class="bi bi-cart3"></i> Mon panier
                </a>
            </div>
            <div class="col-md-6">
                <a href="{{ path('app_order_index') }}" class="btn btn-success w-100 mb-3">
                    <i class="bi bi-receipt"></i> Mes commandes
                </a>
            </div>
        </div>
    {% endif %}
{% endif %}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-tags"></i> Catégories
                </h5>
            </div>
            <div class="card-body">
                {% if categories is empty %}
                    <p class="text-muted">Aucune catégorie disponible.</p>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for categorie in categories %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">{{ categorie.nom }}</h6>
                                    {% if categorie.description %}
                                        <small class="text-muted">{{ categorie.description }}</small>
                                    {% endif %}
                                </div>
                                <div>
                                    <span class="badge bg-primary rounded-pill">{{ categorie.produits|length }} produits</span>
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-primary ms-2">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mt-3">
                        <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Nouvelle Catégorie
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-box"></i> Produits Récents
                </h5>
            </div>
            <div class="card-body">
                {% if produits is empty %}
                    <p class="text-muted">Aucun produit disponible.</p>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for produit in produits|slice(0, 5) %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">{{ produit.nom }}</h6>
                                    <small class="text-muted">{{ produit.categorie.nom }} - {{ produit.prix|number_format(2, ',', ' ') }} FCFA</small>
                                </div>
                                <div>
                                    {% if is_granted('ROLE_USER') %}
                                        <span class="badge bg-{{ produit.stock <= 5 ? 'danger' : 'success' }} rounded-pill">
                                            Stock: {{ produit.stock }}
                                        </span>
                                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-outline-primary ms-2">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    {% else %}
                                        <span class="text-muted">
                                            <i class="bi bi-lock"></i> Connectez-vous pour voir
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mt-3">
                        <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Nouveau Produit
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-star"></i> Pourquoi s'inscrire ?
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <i class="bi bi-cart3 text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Panier personnalisé</h6>
                            <p class="text-muted">Ajoutez vos produits favoris et gérez votre panier</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-receipt text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Suivi des commandes</h6>
                            <p class="text-muted">Consultez l'historique de vos achats</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-shield-check text-info" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Paiement sécurisé</h6>
                            <p class="text-muted">Vos données sont protégées</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% if produitsLowStock is not empty and is_granted('ROLE_ADMIN') %}
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Produits en Stock Faible
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th>Catégorie</th>
                                <th>Stock</th>
                                <th>Prix</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for produit in produitsLowStock %}
                                <tr>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.categorie.nom }}</td>
                                    <td>
                                        <span class="badge bg-danger">{{ produit.stock }}</span>
                                    </td>
                                    <td>{{ produit.prix|number_format(2, ',', ' ') }} FCFA</td>
                                    <td>
                                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %} 