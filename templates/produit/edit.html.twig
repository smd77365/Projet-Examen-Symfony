{% extends 'base.html.twig' %}

{% block title %}Modifier {{ produit.nom }} - Gestion Produits{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil"></i> Modifier {{ produit.nom }}
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.categorie, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.categorie) }}
                                {{ form_errors(form.categorie) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group">
                                    {{ form_widget(form.prix) }}
                                    <span class="input-group-text">FCFA</span>
                                </div>
                                {{ form_errors(form.prix) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.stock, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.stock) }}
                                {{ form_errors(form.stock) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.image, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.image) }}
                        {{ form_errors(form.image) }}
                        <div class="form-text">Formats accept√©s: JPG, PNG, GIF. Taille max: 1MB</div>
                        
                        {% if produit.image %}
                            <div class="mt-2">
                                <p class="text-muted">Image actuelle:</p>
                                <img src="{{ asset('uploads/produits/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-height: 100px;">
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Modifier
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 